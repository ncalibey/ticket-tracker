<%= form_for(project) do |f| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project form being saved:</h2>

      <ul>
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, id: :project_name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, id: :project_description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
